{
  "expo": {
    "name": "pern-todo",
    "slug": "pern-todo",
    "privacy": "unlisted",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "description": "A simplistic todo app to demonstrate my ability to create a PERN stack application with firebase-auth, expo.io and dokku",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "todoAPI": "https://pern.jvincent.dev/api/todo"
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "jvincent-dev",
            "project": "pern-app",
            "authToken": "<add-auth-token>"
          }
        }
      ]
    }
  }
}
